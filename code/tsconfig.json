{
  "compilerOptions": {
    "outDir": "build/",
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/ui/**"]
}
